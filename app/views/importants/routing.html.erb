<% content_for :title do %>
  台风路径
<% end %>

<%= render "tabbar"%>

<div class="mapbar">
  <div id="allmap"></div>
</div>

<div class="select" style="position: absolute; right: 0; bottom: 60px; z-index: 1;">
  <%= select_tag "typhoonid", options_for_select(@typhoons_data.collect{|v| [v['enname'], v['typhoonid']]})%>
</div>

<div id="data">
  <%= render partial: "data", locals: {typhoon_recorder: @typhoon_recorder}%>
</div>

<% content_for :scripts do %>
  <script type="text/javascript">
    $('#typhoonid').change(function(){
      $.ajax({
        url: "/importants/get_typhoon",
        type: 'POST',
        data: {typhoonid: $(this).val()}
      })
    });
  </script>
<% end %>

<style type="text/css">
  .mapbar {
    margin-top: 55px;
    width: 100%;
  }
  #allmap {
    width: 100%;
    height: 100%;
  }
</style>